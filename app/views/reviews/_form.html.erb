<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :content_body %>
  <%= f.text_area :content_body %> <br>
  <%= f.label :author %>
  <%= f.text_field :author %> <br>
  <%= f.label :rating %>
  <%= f.text_field :rating %> <br>
  <%= f.submit %>
<% end %>
